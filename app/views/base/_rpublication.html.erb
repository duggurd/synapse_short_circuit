<main>
<article class="article_page">
    <header>
        <h1 id="title"><%= @publication.name %></h1>
        <!-- <p><b>Publication is in:</b><%= stage_to_text( @publication.stage ) %></p> -->
        <p><b>Published: </b><%= @publication.created_at.strftime("%B %d. %Y") %></p>
        <p><b>Last edit: </b><%= @publication.updated_at.strftime("%B %d. %Y at %H:%M" ) %></p>
        
        <% if not @publication.github_link.nil? and @publication.github_link != ""%>
            <a class="github" href=<%= @publication.github_link %>>
                <img src="https://github.githubassets.com/images/modules/logos_page/GitHub-Logo.png" style="height:20px; margin-top:20px; width:auto;";>
            </a>
            <% end %>
    </header>
    <section>
        <h2 id="description">Description</h2>
        <p><%= @description %></p>
    </section>
    <section>
        <h2 id="body">Body</h2>
        <p><%= @body %></p>
    </section>
    <section>
        <h2 id="resources">Resources</h2>
        <p><%= @resources %></p>
    </section>
    <% if @tags.count > 0 %>
        <section>
            <h2>Tags</h2>
            <ul class="list_inline">
                <% @tags.each do |tag| %>
                    <li>
                        <a class="tag" href="/"> 
                            <%= tag.name %>
                        </a>
                    </li>
                <% end %>
            </ul>
        </section>
    <% end %>
</article>
</main>